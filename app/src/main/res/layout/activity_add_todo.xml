<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddTodoActivity">

    <EditText
            android:layout_width="234dp"
            android:layout_height="69dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/addToDoText" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:hint="ex. Walk the dog"/>
    <CheckBox
            android:text="Important"
            android:layout_width="116dp"
            android:layout_height="49dp"
            android:id="@+id/importantCheckbox" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/addToDoText" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Add"
            android:layout_width="103dp"
            android:layout_height="54dp"
            android:id="@+id/addButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/importantCheckbox"/>
</android.support.constraint.ConstraintLayout>